---
import ScriptPlayer from "./ScriptPlayer.astro";
---

<ScriptPlayer />

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <title>PLAYER TV STREAMING</title>
        <style type="text/css">
            body {
                margin: auto;
                background: black;
            }
        </style>
    </head>

    <body>
        <div class="" style="width: 100%; padding-bottom: 56.25%; position: relative;">
            <div id="player" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0;"></div>
        </div>
        <script type="text/javascript">
            var media = {
                autoplay: true,
                mute: false,
                volume: 0.9,
                videoCastEnabled: true,
                liveStream: {
                    lowLatencyMode: true,
                },
                dataProvider: {
                    title: "",
                    duration: 0,
                    source: [
                        {
                            //URL M3U8
                            url: "https://multicanal.streamseguro.com:5443/LiveApp/streams/streaming.m3u8",
                            contentType: "movie",
                            bitrate: 599999,
                            width: 1280,
                            height: 720,
                        },
                    ],
                    splashImages: [
                        {
                            //IMAGEN DEL REPRODUCTOR
                            url: "",
                            width: 1280,
                            height: 720,
                        },
                    ],
                },
            };
            var element = document.getElementById("player");
            window.bigsoda.player.create(element, media);
        </script>
    </body>
</html>
